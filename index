<body>
  <h1>Selecciona un Quiz</h1>
  <ul id="quizList"></ul>

  <iframe id="quizFrame"></iframe>

  <script>
    const quizzes = [
      { file: 'quizzes/quiz6.html', title: 'Quiz 6' },
      { file: 'quizzes/quiz_gestio.html', title: 'Quiz Gestión' }
    ];

    const quizList = document.getElementById('quizList');

    quizzes.forEach(quiz => {
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = '#';
      a.textContent = quiz.title;
      a.onclick = () => { document.getElementById('quizFrame').src = quiz.file; };
      li.appendChild(a);
      quizList.appendChild(li);
    });
  </script>
</body>
