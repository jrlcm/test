      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 { 
      text-align: center; 
      margin-bottom: 30px;
    }

    ul { 
      list-style: none; 
      padding: 0; 
      width: 100%; 
      max-width: 400px; /* ancho máximo para móviles y tablet */
    }

    li { 
      margin: 15px 0; 
    }

    a { 
      display: block;
      text-decoration: none; 
      color: white; 
      background: #007bff; 
      padding: 20px; 
      border-radius: 10px; 
      text-align: center;
      font-size: 1.2em;
      transition: background 0.2s;
    }

    a:hover { 
      background: #0056b3; 
    }

    iframe { 
      width: 100%; 
      max-width: 800px; 
      height: 500px; 
      border: 1px solid #ccc; 
      margin-top: 30px; 
    }

    @media (max-width: 500px) {
      a { font-size: 1.5em; padding: 25px; }
